<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/bg_color"

    tools:context=".login.mainac">

    <ImageView
        android:id="@+id/login_applogo"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginTop="88dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/backtop"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="267dp"
        android:gravity="center"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="REX-FIT"
        android:textSize="35sp" />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_join_now_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/proximanovaregular"
        android:textSize="18sp"
        android:text="Already have an account?"
        android:textColor="@android:color/black"
        />
    <Button
        android:id="@+id/main_join_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/proximanovaregular"
        android:layout_marginRight="20dp"
        android:background="@drawable/circularbluebordersolid"

        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Join Now"
        android:textColor="@color/white"
        />

</RelativeLayout>